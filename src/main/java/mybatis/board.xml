<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board.BoardBean">
	<select id="getAllCategory"
		resultType="board.model.BoardCategoryBean">
		select * from town_board_category order by no asc
	</select>

	<select id="getAllBoard" resultType="board.model.BoardBean">
		select * from town_board
		order by no asc
	</select>

	<select id="getBoardByCategoryKeyword"
		resultType="board.model.BoardBean">
		select * from town_board where category in
		<foreach collection="categoryList" item="item" open="("
			close=")" separator=",">
			#{item}
		</foreach>
		<where>
			<if test="keyword!=null">
			subject like #{keyword}
			</if>
		</where>
		order by no asc
	</select>

</mapper>